    <script>
        const navLinks = document.querySelectorAll('.nav-link');
        const contentSections = document.querySelectorAll('.content-section');
        const pillNav = document.getElementById('pillNav');

        pillNav.addEventListener('click', (e) => {
            if (e.target.tagName === 'BUTTON') {
                const targetId = e.target.getAttribute('data-target');

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('data-target') === targetId) {
                        link.classList.add('active');
                    }
                });

                contentSections.forEach(section => {
                    section.classList.remove('active');
                    if (section.id === targetId) {
                        section.classList.add('active');
                    }
                });
            }
        });
        
        const diagramBoxes = document.querySelectorAll('.data-flow-box');
        diagramBoxes.forEach(box => {
            box.addEventListener('mouseenter', () => {
                box.classList.add('highlight-step');
            });
            box.addEventListener('mouseleave', () => {
                box.classList.remove('highlight-step');
            });
             box.addEventListener('click', () => {
                diagramBoxes.forEach(b => b.classList.remove('highlight-step'));
                box.classList.add('highlight-step');
            });
        });

    </script>
</body>
